<Window x:Class="PL_WPF.StationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_WPF"
        mc:Ignorable="d"
        Title="Line Station Datails" Height="350" Width="600">
    <Grid>

        <ListBox x:Name="list" Background="DarkGray"
                         ItemsSource="{Binding lines, Mode=OneWayToSource, 
                    UpdateSourceTrigger =PropertyChanged}" Margin="0,0,-0.4,0" />
    </Grid>
</Window>
