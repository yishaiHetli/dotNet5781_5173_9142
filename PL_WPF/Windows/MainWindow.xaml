<Window x:Class="PL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_WPF"
        mc:Ignorable="d"
        Title="user" Height="300" Width="400" >
    <Grid>
        <GroupBox Height="270" Width="400" Header="Choose Option:" FontSize="16" FontStyle="Italic" FontWeight="SemiBold">
            <StackPanel Margin="21,20,29,24" Orientation="Vertical">
                <RadioButton x:Name ="rbDriver" Content="Driver" Height="24" IsChecked="True"/>
                <RadioButton x:Name ="rbManage" Content="Management" Height="23" HorizontalAlignment="Left" Width="223"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnGO" Content="GO" HorizontalAlignment="Left" Height="42" 
             Margin="149,170,0,0" VerticalAlignment="Top" Width="105" Background="#FF4496CF" FontSize="16" FontFamily="Kristen ITC" FontWeight="Bold" Click="btnGO_Click"/>
        <Frame x:Name="Main"  NavigationUIVisibility="Hidden"/>
    </Grid>
    
</Window>
